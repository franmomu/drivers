{
    "name": "bernard/drivers",
    "description": "Official Bernard drivers",
    "license": "MIT",
    "keywords": ["message queue", "message", "queue", "bernard"],
    "homepage": "https://github.com/bernardphp",
    "authors": [
        {
            "name": "Henrik Bjornskov"
        },
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "bernard/bernard": "dev-master"
    },
    "replace": {
        "bernard/pheanstalk-driver": "self.version"
    },
    "require-dev": {
        "pda/pheanstalk": "^3.0",
        "phpunit/phpunit": "^5.7 || ^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Bernard\\Driver\\": "src/"
        },
        "exclude-from-classmap": [
            "**/Tests/"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "clean": "rm -rf build/ vendor/",
        "test": "vendor/bin/phpunit -v",
        "test-coverage": "vendor/bin/phpunit -v --coverage-text --coverage-clover=build/unit_coverage.xml",
        "test-functional": "vendor/bin/phpunit -v --group functional",
        "test-functional-coverage": "vendor/bin/phpunit -v --group functional --coverage-clover=build/functional_coverage.xml",
        "test-ci": [
            "@test",
            "@test-functional"
        ],
        "test-ci-coverage": [
            "@test-coverage",
            "@test-functional-coverage"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
